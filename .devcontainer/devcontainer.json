{
    "name": "mandelbrot_be",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "extensions": [
        "ms-python.python",
        "github.copilot"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.pythonPath": "/usr/local/bin/python"
    },
    "postCreateCommand": "python -m venv .venv && pip install -r requirements.txt"

}